#!/bin/bash

main='DVI-I-1'
side='DP-1'
bedside='DVI-D-0'
vive='HDMI-0'

xrandr --output "$main" --mode 1920x1080
if [ -n "$X_ONE_SCREEN" ]; then
	xrandr --output "$side" --off
	xrandr --output "$vive" --off
	xrandr --output "$bedside" --off
else
	xrandr --output "$main" --pos 0x420 # move main down so side can reach above its top
	xrandr --output "$side" --mode 1920x1080 --rotate left --pos 1920x0
	xrandr --output "$bedside" --mode 1920x1080 --right-of "$side"
	xrandr --output "$vive" --off
fi
