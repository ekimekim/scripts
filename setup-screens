#!/bin/bash

#SCREENS=('DVI-I-1' 'DP-0' 'DP-2' 'DP-4')
SCREENS=('DP-0' 'DP-2' 'DP-4')
MODE='2560x1440'
ROTATE=left

prev=
for screen in "${SCREENS[@]}"; do
	if [ -z "$prev" ]; then
		location=(--pos '0x0')
	else
		location=(--right-of "$prev")
	fi
	xrandr --output "$screen" --mode "$MODE" "${location[@]}" --rotate "$ROTATE"
	prev="$screen"
done
